[Unit]
Description=Soundbase Service
After=multi-user.target

[Service]
User=pi
Type=idle
WorkingDirectory=/home/pi/soundbase/
ExecStart=/home/pi/soundbase/target/release/soundbase /mnt/data/.filebase

Restart=on-failure
RestartSec=10
StartLimitBurst=5
StartLimitInterval=100

[Install]
WantedBy=multi-user.target